@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Detayları</h1>
<br/>
<form class="form-group">

    @Html.Label("ID")
    @Html.HiddenFor(x=>x.WriterMessageID,new {@class="form-control"})
    <br/>
    @Html.Label("Gönderen Adı")
    @Html.TextAreaFor(x=>x.SenderName,new{@class="form-control",@disabled="disabled"})
    <br/>
    @Html.Label("Gönderici Adı")
    @Html.TextAreaFor(x=>x.Sender,new{@class="form-control",@disabled="disabled"})
    <br/>
    @Html.Label("Gönderici Adı")
    @Html.TextAreaFor(x=>x.MessageContent,new{@class="form-control",@disabled="disabled"})



</form>

