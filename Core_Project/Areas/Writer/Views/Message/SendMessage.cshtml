@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Sayfası</h1>
<br/>
<form class="form-group" method="post">

    
    
    @Html.Label("Alıcı Mail")
    @Html.TextAreaFor(x=>x.ReceiverName,new{@class="form-control"})
    <br/>
    @Html.Label("Konu")
    @Html.TextAreaFor(x=>x.Subject,new{@class="form-control"})
    <br/>
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent,new{@class="form-control"})

    <button class = "btn btn-outline-primary">Gönder</button>



</form>

